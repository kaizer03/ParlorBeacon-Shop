<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccccff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/BookingCustName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/BookingCustEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BookingCustName"
            android:text="Email"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/BookingCustService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BookingCustEmail"
            android:text="Service"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/BookingCustServTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BookingCustService"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:text="Time"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/BookingCustStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:visibility="gone"
            android:layout_below="@+id/BookingCustServTime"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#000"/>

        <Button
            android:id="@+id/BookingCancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BookingCustStatus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            android:text="Cancel Booking"
            android:background="#d98cb3"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ButtonStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/textviewques"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Do u want to accept the booking?"
            android:textColor="#000"/>

        <Button
            android:id="@+id/BookingAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/textviewques"
            android:background="#9966ff"/>

        <Button
            android:id="@+id/BookingReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="No"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/textviewques"
            android:background="#ff8080"/>

    </RelativeLayout>

</LinearLayout>