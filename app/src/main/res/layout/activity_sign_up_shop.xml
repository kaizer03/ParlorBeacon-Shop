<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.springboardtechsolutions.parlorbeaconshop.SignUpShop">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:background="@drawable/bg1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <EditText
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/signup_shop_shopkeepername"
            android:maxLines="1"
            android:hint="Enter Shopkeeper Name"/>

        <EditText
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/signup_shop_shopname"
            android:maxLines="1"
            android:hint="Enter Shop Name"/>

        <EditText
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:id="@+id/signup_shop_email"
            android:maxLines="1"
            android:hint="Enter Email"/>

        <EditText
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/signup_shop_pass"
            android:maxLines="1"
            android:hint="Enter Password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:id="@+id/signup_shop_shopphone"
            android:maxLines="1"
            android:inputType="phone"
            android:hint="Enter Shop Phone No"/>


        <EditText
            android:inputType="textPostalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/signup_shop_shopaddress"
            android:maxLines="1"
            android:hint="Enter Shop Address"/>

        <EditText
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/signup_shop_shopcity"
            android:maxLines="1"
            android:hint="Enter Shop City"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/signup_shop_shopzip"
            android:maxLines="1"
            android:inputType="number"
            android:hint="Enter Shop Zip Code"/>

        <EditText
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/signup_shop_shopopen"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            android:hint="Enter Shop Open Time"
            android:onClick="onClick1" />

        <EditText
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/signup_shop_shopclose"
                android:maxLines="1"
                android:hint="Enter Shop Close Time"
                android:onClick="onClick2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/AcceptTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/i_accept_the_terms_and_conditions"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginBottom="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/signup_shop_button"
            android:onClick="onClick3"/>
    </LinearLayout>

    </FrameLayout>

</ScrollView>
