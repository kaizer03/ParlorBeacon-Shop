<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.springboardtechsolutions.parlorbeaconshop.MyShop"
    tools:showIn="@layout/app_bar_my_shop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Upload Today's Notice"
        android:id="@+id/textView16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#422527"
        android:textSize="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noticeboard"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:lines="5"
        android:background="#f0e6f4"
        android:autoText="false"
        android:gravity="top" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/noticesend"
        android:src="@drawable/sendnotice"
        android:background="@null"
        android:layout_below="@+id/noticeboard"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="onClickNotice"/>

    <Button
        android:gravity="end"
        android:textAlignment="textEnd"
        android:text="See all picture >"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noticesend"
        android:background="#ffffff"
        android:onClick="onClickAllPic"/>

</RelativeLayout>
